<%= form_with(model: session, local: true, class: "d-flex flex-column") do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :session_email, name: "session[email]",
        class: "form-control"
    %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, id: :session_password, name: "session[password]",
        class: "form-control"
    %>
  </div>

  <button type="submit" class="btn-themed-clean align-self-center" style="width: 10em;">
    Log In
  </button>
<% end %>
